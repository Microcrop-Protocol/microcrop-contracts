# MicroCrop Deployment Environment Variables
# Copy this file to .env and fill in your values

# =================================
# Network Configuration
# =================================

# RPC URLs
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
BASE_MAINNET_RPC_URL=https://mainnet.base.org

# Private key for deployment (NEVER commit this with real values!)
PRIVATE_KEY=0x...

# Etherscan API key for verification
ETHERSCAN_API_KEY=your_etherscan_api_key

# =================================
# Contract Configuration
# =================================

# USDC Token Addresses
# Base Sepolia: 0x036CbD53842c5426634e7929541eC2318f3dCF7e
# Base Mainnet: 0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913
USDC_ADDRESS=0x036CbD53842c5426634e7929541eC2318f3dCF7e

# Backend wallet that receives payouts for M-Pesa conversion
BACKEND_WALLET=0x...

# Admin multi-sig wallet for contract administration
ADMIN_MULTISIG=0x...

# =================================
# Chainlink Configuration
# =================================

# Chainlink Keystone Forwarder address
KEYSTONE_FORWARDER=0x...

# Chainlink workflow address for damage reports
WORKFLOW_ADDRESS=0x...

# Chainlink workflow ID
WORKFLOW_ID=12345
